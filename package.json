{
	"name": "formatyaya-vscode",
	"displayName": "formatyaya-vscode",
	"description": "formatter for yaya",
	"version": "0.1.4",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [],
	"publisher": "apxxxxxxe",
	"repository": {
		"type": "git",
		"url": "https://github.com/apxxxxxxe/formatyaya-vscode"
	},
	"activationEvents": [
		"onLanguage:aya"
	],
	"main": "./out/extension",
	"contributes": {
		"type": "object",
		"configuration": {
			"title": "formatyaya-vscode",
			"properties": {
				"formatyaya-vscode.useSpace": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "use spaces as indents"
				},
				"formatyaya-vscode.spaceCount": {
					"scope": "resource",
					"type": "number",
					"default": 0,
					"description": "number of spaces when using spaces as indents"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "./src/build.sh; tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@vscode/test-electron": "^2.2.0",
		"eslint": "^8.28.0",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"typescript": "^4.9.3"
	},
	"dependencies": {
		"@types/tmp": "^0.2.3",
		"tmp": "^0.2.1"
	},
	"bugs": {
		"url": "https://github.com/apxxxxxxe/formatyaya-vscode/issues"
	},
	"homepage": "https://github.com/apxxxxxxe/formatyaya-vscode#readme"
}
